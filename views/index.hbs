<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <meta name="csrf-token" content="{{csrfToken}}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/loader.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>

<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                Zoho Notes <span></span>
            </div>

            <button class="btn-new" id="btn-new-folder">
                <i data-lucide="folder-plus"></i> New Folder
            </button>

            <nav>
                <div class="nav-item active" id="toggle-notebooks"
                    style="display: flex; align-items: center; width: 100%;">
                    <i data-lucide="layers"></i>
                    <span style="flex: 1;">My Notebooks</span>
                    <button id="add-folder-sidebar" class="btn-icon-sm" title="Add Folder"
                        style="margin-right: 8px; background: none; border: none;">
                        <i data-lucide="folder-plus"></i>
                    </button>
                    <i data-lucide="chevron-down" id="chevron-notebooks" style="width: 14px;"></i>
                </div>
                <div class="notebook-list" id="notebook-list">
                    <!-- Dynamic notebooks here -->
                </div>
                <div class="nav-item" id="nav-starred-cells">
                    <i data-lucide="star" style="fill: #ffcc00; color: #ffcc00;"></i> Starred Notes
                </div>
                <div class="nav-item" id="nav-trash">
                    <i data-lucide="trash-2"></i> Trash
                </div>
            </nav>

            <div style="margin-top: auto; padding: 20px 0; border-top: 1px solid var(--border-color);">
                <div class="user-profile-card">
                    <div class="user-avatar">
                        {{#if username}}{{substring username 0 1}}{{else}}U{{/if}}
                    </div>
                    <div class="user-info">
                        <div class="user-name-sidebar">{{username}}</div>
                        <a href="/logout" class="user-logout-link">Logout Account</a>
                    </div>
                </div>
                <div class="nav-item" id="nav-settings">
                    <i data-lucide="settings"></i> Settings
                </div>
                <div style="margin-left: 20%; font-size: 10px; color: var(--text-dim); opacity: 0.9; margin-top: 10px;">
                    <a href="https://fayasktr.github.io/Fayas-protfolio/" target="_blank" rel="noopener noreferrer"
                        style="text-decoration: none; color: var(--text-dim);">Â©Fayas kp</a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="notebook-container">
                <header class="notebook-header" style="display: flex; align-items: center; gap: 15px;">
                    <button id="btn-star" class="btn-icon" title="Star Notebook"
                        style="font-size: 24px; color: var(--text-dim);">
                        <i data-lucide="star"></i>
                    </button>
                    <input type="text" class="notebook-title" id="notebook-title" value="Untitled Notebook"
                        placeholder="Enter title..." style="flex: 1; margin-bottom: 0;">
                    <div style="display: flex; gap: 10px;">
                    </div>
                </header>

                <div id="cells-list">
                    <!-- Cells will be dynamiclly injected here -->
                </div>

                <div style="height: 100px;"></div>
            </div>
        </main>
    </div>

    <!-- Floating Actions -->
    <div class="controls">
        <button class="btn-floating" id="add-code-cell" title="Add Note">
            <i data-lucide="plus"></i>
        </button>
        <button class="btn-floating" style="background: #333;" id="run-all-cells" title="Run All">
            <i data-lucide="play"></i>
        </button>
        <button class="btn-floating" style="background: #ff3b30;" id="clear-all-outputs" title="Clear All Outputs">
            <i data-lucide="eraser"></i>
        </button>
    </div>

    <!-- Generic Modal Structure -->
    <div id="modal-overlay" class="modal-overlay hidden">
        <!-- New Folder Modal -->
        <div id="modal-folder" class="modal-content hidden">
            <button class="modal-btn-x modal-close">&times;</button>
            <div class="modal-icon">
                <img src="/.gemini/antigravity/brain/f8109448-7949-4cf6-af9a-eca12ee95687/folder_creation_icon_1768049162606.png"
                    alt="Folder Icon">
            </div>
            <h2>Create New Folder</h2>
            <p>Organize your thoughts into a new workspace.</p>
            <input type="text" id="input-folder-name" placeholder="Folder name..." value="New Folder">
            <button class="btn-primary" id="btn-confirm-folder">Create Folder</button>
        </div>

        <!-- New File Modal -->
        <div id="modal-file" class="modal-content hidden">
            <button class="modal-btn-x modal-close">&times;</button>
            <div class="modal-icon">
                <img src="/.gemini/antigravity/brain/f8109448-7949-4cf6-af9a-eca12ee95687/file_creation_icon_1768049187671.png"
                    alt="File Icon">
            </div>
            <h2>Create New File</h2>
            <p>Start a new note in <span id="target-folder-name">root</span></p>
            <input type="text" id="input-file-name" placeholder="File title..." value="New File">
            <button class="btn-primary" id="btn-confirm-file">Create File</button>
        </div>

        <!-- Settings Modal -->
        <div id="modal-settings" class="modal-content hidden">
            <button class="modal-btn-x modal-close">&times;</button>
            <div class="modal-icon"
                style="background: var(--accent); border-radius: 50%; width: 60px; height: 60px; margin: 0 auto 20px; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 24px;">
                {{#if username}}{{substring username 0 1}}{{else}}U{{/if}}
            </div>
            <h2>Settings</h2>
            <p>Manage your account and preferences.</p>

            <div class="settings-group">
                <div class="user-info-large">
                    <strong>{{username}}</strong>
                    <span>User Account</span>
                </div>
            </div>

            <div class="settings-group">
                <div class="theme-toggle-row">
                    <span>Appearance</span>
                    <label class="switch">
                        <input type="checkbox" id="theme-switch">
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>

            <div style="margin-top: 20px;">
                <a href="/logout" class="btn-danger-outline">Logout Account</a>
            </div>
        </div>

        <!-- Generic Input Modal (Rename) -->
        <div id="modal-input" class="modal-content hidden">
            <button class="modal-btn-x modal-close">&times;</button>
            <div class="modal-icon">
                <i data-lucide="edit-3" style="width: 50px; height: 50px; color: var(--accent);"></i>
            </div>
            <h2 id="modal-input-title">Rename</h2>
            <p id="modal-input-desc">Enter a new name.</p>
            <input type="text" id="modal-input-field" placeholder="Type here...">
            <div class="modal-footer">
                <button class="btn-primary" id="btn-modal-input-confirm">Confirm</button>
                <button class="btn-secondary modal-close">Cancel</button>
            </div>
        </div>

        <!-- Generic Alert Modal (Confirmation) -->
        <div id="modal-alert" class="modal-content hidden">
            <button class="modal-btn-x modal-close">&times;</button>
            <div class="modal-icon">
                <i data-lucide="alert-triangle" style="width: 50px; height: 50px; color: #ff3b30;"></i>
            </div>
            <h2 id="modal-alert-title">Are you sure?</h2>
            <p id="modal-alert-desc">This action cannot be undone.</p>
            <div class="modal-footer">
                <button class="btn-primary" id="btn-modal-alert-confirm" style="background: #ff3b30;">Confirm</button>
                <button class="btn-secondary modal-close">Cancel</button>
            </div>
        </div>
    </div>

    <script src="/js/notebook.js"></script>
    <script>
        lucide.createIcons();
    </script>
</body>

</html>