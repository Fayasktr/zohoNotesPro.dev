<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0a0a0c;
            --card-bg: #111114;
            --accent: #6d5dfc;
            --text-main: #e1e1e6;
            --text-dim: #8e8e99;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-main);
            overflow-x: hidden;
        }

        .map-grid {
            background-image: radial-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
            background-size: 30px 30px;
        }

        .level-node {
            width: 70px;
            height: 70px;
            border-radius: 20px;
            background: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.05);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            z-index: 10;
        }

        .level-node:hover {
            transform: translateY(-5px);
            border-color: var(--accent);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }

        .level-node.completed {
            border-color: #30ff6a;
            color: #30ff6a;
        }

        .level-node.active {
            background: var(--accent);
            border-color: var(--accent);
            color: white;
            box-shadow: 0 0 20px rgba(109, 93, 252, 0.3);
        }

        .connection-line {
            position: absolute;
            width: 2px;
            background: rgba(255, 255, 255, 0.05);
            z-index: 1;
        }
    </style>
</head>

<body class="min-h-screen map-grid pb-32">
    <!-- Nav -->
    <nav class="fixed top-0 left-0 w-full p-8 flex justify-between items-center z-50 pointer-events-none">
        <a href="/game"
            class="pointer-events-auto p-3 bg-white/5 backdrop-blur-md rounded-xl border border-white/5 hover:bg-white/10 transition-all">
            <i data-lucide="chevron-left" class="w-5 h-5"></i>
        </a>
        <div class="pointer-events-auto glass px-6 py-2 rounded-2xl border border-white/5 bg-white/5">
            <div class="text-[10px] font-black text-[var(--text-dim)] uppercase text-center">Current Points</div>
            <div class="text-lg font-black text-yellow-500 text-center">{{user.points}}</div>
        </div>
    </nav>

    <!-- Header -->
    <header class="pt-32 pb-16 text-center space-y-2">
        <div class="text-[10px] font-black text-[var(--accent)] uppercase tracking-widest">PHASE: {{topic}}</div>
        <h1 class="text-4xl font-black text-white capitalize">{{topic}}</h1>
        <p class="text-[var(--text-dim)] font-medium">Path to Level 100 Mastery</p>
    </header>

    <!-- Map Layout -->
    <div class="max-w-md mx-auto relative px-4 flex flex-col items-center gap-20">
        {{#each quests}}
        <div class="relative flex flex-col items-center">
            {{#unless @last}}
            <div class="connection-line h-20 top-full"></div>
            {{/unless}}

            <div class="level-node {{#if (contains ../user.completedQuests this.id)}}completed{{/if}}"
                onclick="window.location.href='/game/play/{{this.id}}'">
                {{#if (contains ../user.completedQuests this.id)}}
                <i data-lucide="check" class="w-6 h-6"></i>
                {{else}}
                {{add @index 1}}
                {{/if}}
            </div>

            <div class="absolute -right-32 top-1/2 -translate-y-1/2 w-28 text-left">
                <div class="text-[10px] font-black text-[var(--text-dim)] uppercase leading-none mb-1">Mission</div>
                <div class="text-sm font-bold truncate">{{this.title}}</div>
            </div>
        </div>
        {{/each}}

        {{#unless quests}}
        <div class="py-20 flex flex-col items-center gap-4 opacity-30">
            <i data-lucide="loader-2" class="w-12 h-12 animate-spin"></i>
            <p class="font-black text-xs uppercase tracking-tighter">Preparing The Mission Area...</p>
        </div>
        {{/unless}}

        <!-- Locked Level -->
        <div class="level-node opacity-20 cursor-not-allowed">
            <i data-lucide="lock" class="w-5 h-5 text-[var(--text-dim)]"></i>
        </div>
    </div>

    <script>
        lucide.createIcons();
        window.onload = () => {
            const nodes = document.querySelectorAll('.level-node');
            const firstUncompleted = Array.from(nodes).find(node => !node.classList.contains('completed'));
            if (firstUncompleted) {
                firstUncompleted.classList.add('active');
                setTimeout(() => {
                    firstUncompleted.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 300);
            }
        };
    </script>
</body>

</html>